<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#EFE9E7"

    app:cardCornerRadius="5dp"

    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:padding="5dp">


        <TextView
            android:id="@+id/bodyMessage"
            android:layout_width="270dp"
            android:layout_height="19dp"
            android:layout_marginEnd="20dp"
            android:paddingHorizontal="10dp"

            android:text="body"
            android:textColor="#757575"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivStory"


            app:layout_constraintRight_toRightOf="@id/ivStory"
            app:layout_constraintTop_toBottomOf="@id/titleMessage"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/titleMessage"
            android:layout_width="283dp"
            android:layout_height="19dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="30dp"
            android:text="title here"
            android:textColor="#757575"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivStory"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.138"
            app:layout_constraintRight_toRightOf="@id/ivStory"
            />

        <ImageView


            android:id="@+id/ivStory"
            android:layout_width="66dp"
            android:layout_height="74dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/capture"
            app:layout_constraintBottom_toTopOf="@+id/bodyMessage"
            app:layout_constraintEnd_toStartOf="@+id/titleMessage"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:background="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="70dp"
            android:layout_height="17dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bodyMessage"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>